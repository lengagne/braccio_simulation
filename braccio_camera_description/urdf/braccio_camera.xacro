<?xml version="1.0"?>
<robot name="braccio_camera" xmlns:xacro="http://www.ros.org/wiki/xacro">
    
  <link name="world"/>
    <link name="body1">
        <inertial>
            <mass value="0.01" />
            <origin xyz="0 0 0" />
            <inertia ixx="0.001"  ixy="0.0"  ixz="0.0"
                    iyy="0.001"  iyz="0.0"
                    izz="0.001" />
        </inertial>
    </link>
    <link name="body2">
        <inertial>
            <mass value="0.01" />
            <origin xyz="0 0 0" />
            <inertia ixx="0.001"  ixy="0.0"  ixz="0.0"
                    iyy="0.001"  iyz="0.0"
                    izz="0.001" />
        </inertial>
    </link>
        
    <link name="body3">
        <inertial>
            <mass value="0.01" />
            <origin xyz="0 0 0" />
            <inertia ixx="0.001"  ixy="0.0"  ixz="0.0"
                    iyy="0.001"  iyz="0.0"
                    izz="0.001" />
        </inertial>
    </link>
        
    <link name="camera_link">
        <inertial>
            <mass value="0.01" />
            <origin xyz="0 0 0" />
            <inertia ixx="0.001"  ixy="0.0"  ixz="0.0"
                    iyy="0.001"  iyz="0.0"
                    izz="0.001" />
        </inertial>
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <box size="0.02 0.10 0.02" />
            </geometry>
            <material name="Cyan">
                <color rgba="0 1.0 1.0 1.0"/>
            </material>            
        </visual>
<!--        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <box size="0.02 0.1 0.02" />
            </geometry>
        </collision>-->
    </link>

    <joint name="base_joint" type="revolute">
        <axis xyz="0 0 1" />
        <limit effort="20.0" lower="-100.0" upper="100" velocity="0.1" />
        <origin rpy="0 0 0" xyz="0 0 0" />
        <parent link="world" />
        <child link="body1" />
    </joint>

    <joint name="base_depth" type="prismatic">
        <axis xyz="1 0 0" />
        <limit effort="20.0" lower="00.0" upper="100" velocity="0.1" />
        <origin rpy="0 0 0" xyz="0 0 0" />
        <parent link="body1" />
        <child link="body2" />
    </joint>    
    
    <joint name="base_height" type="prismatic">
        <axis xyz="0 0 1" />
        <limit effort="20.0" lower="00.0" upper="100" velocity="0.1" />
        <origin rpy="0 0 0" xyz="0 0 0" />
        <parent link="body2" />
        <child link="body3" />
    </joint>        
    
    <joint name="camera_tilt" type="revolute">
        <axis xyz="0 1 0" />
        <limit effort="2.0" lower="-3.14" upper="3.14" velocity="0.1" />
        <origin rpy="0 0 0" xyz="0 0 0" />
        <parent link="body3" />
        <child link="camera_link" />
    </joint>            
        <xacro:include filename="$(find braccio_camera_description)/urdf/braccio_camera.gazebo" />
</robot>
